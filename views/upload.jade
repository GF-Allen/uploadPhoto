extends layout

block content
    h1=error
    form(action='/upload', enctype='multipart/form-data' ,method='post')
        h3 上传背景
        input(type='text' ,name='image',value='bg',hidden='yes')
        input.btn.btn-default(type='file' ,name='image',accept="image/*",id='file_bg', size='28' ,onchange="document.getElementById('file_bg').value=this.value")
        input.btn.btn-default(type='submit' ,name='submit', value='上传')

    form(action='/upload', enctype='multipart/form-data' ,method='post')
        h3 上传二维码
        input(type='text' ,name='image',value='qrcode',hidden='yes')
        input.btn.btn-default(type='file' ,name='image',accept="image/*", class='file' ,id='file_qrcode', size='28' ,onchange="document.getElementById('qrcode').value=this.value")
        input.btn.btn-default(type='submit' ,name='submit', value='上传')

    form(action='/upload', enctype='multipart/form-data' ,method='post')
        h3 上传头部图片
        input(type='text' ,name='image',value='top',hidden='yes')
        input.btn.btn-default(type='file' ,name='image',accept="image/*", class='file' ,id='file_top', size='28' ,onchange="document.getElementById('file_top').value=this.value")
        input.btn.btn-default(type='submit' ,name='submit', value='上传')

    form(action='/upload', enctype='multipart/form-data' ,method='post')
        h3 上传底部图片
        input(type='text' ,name='image',value='bottom',hidden='yes')
        input.btn.btn-default(type='file' ,name='image',accept="image/*", class='file' ,id='file_bottom', size='28' ,onchange="document.getElementById('file_bottom').value=this.value")
        input.btn.btn-default(type='submit' ,name='submit', value='上传')